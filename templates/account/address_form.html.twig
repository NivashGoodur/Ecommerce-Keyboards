{% extends "base.html.twig" %}

{% block title %}Gérer mes adresse{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mt-4">Gérer mes adresse</h1>
        <p>C'est ici que vous allez pouvoir gérer toutes vos adresses. <br> 
        <a href="{{ path('account_address') }}">Retour</a></p>
        <hr>
        {{form_start(form)}}
            <div class="row">
                <div class="col-12">{{ form_row(form.name) }}</div>
                <div class="col-6">{{ form_row(form.firstname) }}</div>
                <div class="col-6">{{ form_row(form.lastname) }}</div>
                <div class="col-6">{{ form_row(form.company) }}</div>
                <div class="col-6">{{ form_row(form.address) }}</div>
                <div class="col-6">{{ form_row(form.postal) }}</div>
                <div class="col-6">{{ form_row(form.city) }}</div>
                <div class="col-6">{{ form_row(form.country) }}</div>
                <div class="col-6">{{ form_row(form.phone) }}</div>
            </div>
        {{form_end(form)}}
    </div>
    
{% endblock %}